{% extends "_layouts/dashboard.njk" %}
{% block body %}
<div class="container-form">
<div class="table-customers">
<h1>Lista de Clientes: </h1>
  <table class="table table-hover">
<thead>
	<tr>
		<th>Nome</th>
		<th>CPF/CNPJ</th>
		<th>Telefone</th>
		<th>Opções</th>
	</tr>
</thead>
<tbody>
{% if (customers) %}
{% for customer in customers %}
	<tr>
		<td>{{customer.name}}</td>
		<td>{{customer.cpf_cnpj}}</td>
		<td>{{customer.phone_number}}</td>
		<td class="actions text-right">
			<a href="/customer/{{customer._id}}" class="btn btn-sm btn-success"><i class="fa fa-eye"></i> Visualizar</a>
			<a href="/customer/edit/{{customer._id}}" class="btn btn-sm btn-warning"><i class="fa fa-pencil"></i> Editar</a>
			<a id="danger" href="/customer/ex/{{customer._id}}" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Excluir</a>
		</td>
	</tr>
{% endfor %}
{% else %}
	<tr>
		<td colspan="6">Nenhum registro encontrado.</td>
	</tr>
{% endif %}
</tbody>
</table>
</div>
</div>
{% endblock %}
