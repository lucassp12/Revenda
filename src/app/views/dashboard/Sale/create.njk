{% extends "_layouts/dashboard.njk" %}
{% block body %}
<div class="container-form">
  <div class="form-sale">
    <form
      class="form"
      method="post"
      action="/sale/vehicle/{{vehicle._id}}"
    >
      <h1>Efetuar Venda:</h1>
      <hr />
      <div class="row">
        <div class="form-group col-md-12">
          <label for="vehicle">Veiculo:</label>
          <input type="text" class="form-control" value="{{vehicle.model}} - {{vehicle.plate}}" name="vehicle"/>
        </div>
      </div> 
      <div class="row">
        <div class="form-group col-md-12">
          <label for="mark">Cliente:</label>
          <select class="form-control" name="customer" required>
          {% if customers != 0%}
          {% for customer in customers  %}
            <option value="{{customer.name}}">{{customer.name}}</option>
          {% endfor %}
          {% else %}
            <option disabled>Cadastrar</option>
          {% endif %}
          </select>
        </div>
      </div> 
      <div class="row">
        <div class="form-group col-md-12">
          <label for="mark">Vendedor:</label>
          <select class="form-control" name="saller" required>
          {% if sallers != 0%}
          {% for saller in sallers %}
            <option value="{{saller.name}}">{{saller.name}}</option>
          {% endfor %}
          {% else %}
            <option disabled>Cadastrar</option>
          {% endif %}
          </select>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-6">
          <label for="price">Pre√ßo:</label>
          <input type="text" class="form-control" value="{{vehicle.price_sale}}" name="price"/>
        </div>
         <div class="form-group col-md-6">
          <label for="date">Data da Venda:</label>
          <input type="text" class="form-control" id="calendario" name="date" />
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-12">
          <label for="name">Adicionais:</label>
          <textarea id="form7" class="md-textarea form-control" name="information" rows="5"></textarea>
      </div>
      </div>
      <div id="actions" class="row">
        <div class="col-md-12">
          <button type="submit" class="btn btn-primary">Efetuar</button>
          <a href="/vehicles" class="btn btn-default">Cancelar</a>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
