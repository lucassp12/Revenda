{% extends "_layouts/dashboard.njk" %}
{% block body %}
<div class="container-form">
<div class="table-category">
<h1>Lista de Marcas: </h1>
		<td class="actions text-right">
			<a href="/mark" class="btn btn-sm btn-success"><i class="fas fa-plus"></i> Adicionar</a>
      <input class="pesquisas" type="text" /><a class="pesquisar btn btn-sm btn-info"><i class="fas fa-search"></i> Pesquisar</a>
		</td>
  <table class="table table-hover">
<thead>
	<tr>
		<th>Nome: </th>
	</tr>
</thead>
<tbody>
{% if (marks != 0) %}
{% for mark in marks %}
	<tr>
		<td>{{mark.name}}</td>
		<td class="actions text-right">
			<a href="/mark/edit/{{mark._id}}" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Editar</a>
      <a href="/mark/{{mark._id}}" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> Excluir</a>
		</td>
	</tr>
{% endfor %}
{% else %}
	<tr>
		<td colspan="6">Nenhum registro encontrado.</td>
	</tr>
{% endif %}
</tbody>
</table>
    <div class="paginate">
    <a href="/marks?page={{pages.page -1}}" class="btn btn-sm btn-primary"
    {% if (pages.page === 1) %}
    disabled 
    {% endif %}
    
    >Anterior</a>
    <input type="text" value="{{pages.page}}" disabled>
    <span>de</span>
    <input type="text" value="{{pages.total}}" disabled>
    <a  class="btn btn-sm btn-success" href="/marks?page={{pages.page +1}}"
    {% if (pages.page === pages.total) %}
    disabled 
    {% endif %}
    >Pr√≥xima</a>
    </div>
</div>
</div>
{% endblock %}
