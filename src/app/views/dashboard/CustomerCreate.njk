{% extends "_layouts/dashboard.njk" %}
{% block body %}
<div class="container-form">
  <div class="form-customer">
    <form
      class="form"
      method="post"
      action="/customer"
    >
      <h1>Cadastro de Clientes:</h1>
      <hr />
      <div class="row">
        <div class="form-group col-md-6">
          <label for="name">Nome Completo:</label>
          <input type="text" class="form-control" name="name" />
        </div>

        <div class="form-group col-md-3">
          <label for="campo2">CNPJ</label>
          <input type="text" class="form-control" name="cnpj" value="{{company.cnpj}}" />
        </div>

        <div class="form-group col-md-3">
          <label for="campo3">Inscrição Estadual</label>
          <input type="text" class="form-control" name="ie" value="{{company.ie}}"  />
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-5">
          <label for="campo1">Endereço</label>
          <input type="text" class="form-control" name="street" value="{{company.street}}"  />
        </div>

        <div class="form-group col-md-2">
          <label for="campo2">Número</label>
          <input type="text" class="form-control" name="number" value="{{company.number}}" />
        </div>

        <div class="form-group col-md-3">
          <label for="campo3">Bairro</label>
          <input type="text" class="form-control" name="neighborhood" value="{{company.neighborhood}}" />
        </div>

        <div class="form-group col-md-2">
          <label for="campo3">Cep</label>
          <input type="text" class="form-control" name="zip_code" value="{{company.zip_code}}"  />
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-3">
          <label for="campo1">Cidade</label>
          <input type="text" class="form-control" name="city"value="{{company.city}}"  />
        </div>

        <div class="form-group col-md-2">
          <label for="campo2">UF</label>
          <input type="text" class="form-control" name="state" value="{{company.state}}"  />
        </div>

        <div class="form-group col-md-2">
          <label for="campo3">Telefone</label>
          <input type="text" class="form-control" name="phone_number" value="{{company.phone_number}}"  />
        </div>
        <div class="form-group col-md-1">
          <label for="exampleFormControlFile1">Logotipo</label>
          <input id="file" type="file" class="form-control-file" name="logo" value="{{company.logo}}"  />
        </div>
      </div>

      <div id="actions" class="row">
        <div class="col-md-12">
          <button type="submit" class="btn btn-primary">Salvar</button>
          <a href="/dashboard" class="btn btn-default">Cancelar</a>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
