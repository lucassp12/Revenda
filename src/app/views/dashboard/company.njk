{% extends "_layouts/dashboard.njk" %}
{% block body %}
<div class="container-form">
  <div class="form-company">
    <form
      class="form"
      method="post"
      action="/company/{{company.id}}"
      enctype="multipart/form-data"
    >
      <h1>Atualizar Dados:</h1>
      <hr />
      <div class="row">
        <div class="form-group col-md-6">
          <label for="name">Nome / Razão Social:</label>
          <input type="text" class="form-control" name="name" value="{{company.name}}" required />
        </div>

        <div class="form-group col-md-3">
          <label for="campo2">CNPJ:</label>
          <input type="text" class="cnpj form-control" name="cnpj" value="{{company.cnpj}}" required/>
        </div>

        <div class="form-group col-md-3">
          <label for="campo3">Inscrição Estadual:</label>
          <input type="text" class="ie form-control" name="ie" value="{{company.ie}}"required  />
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-5">
          <label for="campo1">Endereço:</label>
          <input type="text" class="form-control" name="street" value="{{company.street}}" required  />
        </div>

        <div class="form-group col-md-2">
          <label for="campo2">Número:</label>
          <input type="text" class="number form-control" name="number" value="{{company.number}}" maxlength="7" required/>
        </div>

        <div class="form-group col-md-3">
          <label for="campo3">Bairro:</label>
          <input type="text" class="form-control" name="neighborhood" value="{{company.neighborhood}}" required />
        </div>

        <div class="form-group col-md-2">
          <label for="campo3">CEP:</label>
          <input type="text" class="CEP form-control" name="zip_code" value="{{company.zip_code}}" maxlength="9" required />
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-3">
          <label for="campo1">Cidade:</label>
          <input type="text" class="form-control" name="city"value="{{company.city}}" required />
        </div>

        <div class="form-group col-md-2">
          <label for="campo2">UF:</label>
          <input type="text" class="form-control" name="state" value="{{company.state}}" maxlength="2" required/>
        </div>

        <div class="form-group col-md-3">
          <label for="campo3">Telefone:</label>
          <input type="text" class="phone form-control" name="phone_number" value="{{company.phone_number}}" maxlength="15" required/>
        </div>
        <div class="form-group col-md-1">
          <label for="exampleFormControlFile1">Logotipo</label>
          <input id="file" type="file" class="form-control-file" name="logo" value="{{company.logo}}" required />
        </div>
      </div>

      <div id="actions" class="row">
        <div class="col-md-12">
          <button type="submit" class="btn btn-primary">Salvar</button>
          <a href="/dashboard" class="btn btn-default">Cancelar</a>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
